{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"inputs": [
		{
			"id": "buildConfig",
			"type": "pickString",
			"description": "Select a build configuration",
			"options": [
				"Release",
				"Debug"
			],
			"default": "Debug"
		},
		{
			"id": "publishConfig",
			"type": "pickString",
			"description": "Select a publish configuration",
			"options": [
				"ReleaseAOT",
				"DebugAOT"
			],
			"default": "DebugAOT"
		}
	],
	"tasks": [
		{
			"label": "$(build) Build Project: Template",
			"command": "dotnet",
			"type": "shell",
			"args": [
				"build",
				"-c",
				"${input:buildConfig}",
			],
			"group": "build",
			"presentation": {
				// "reveal": "silent"
			},
			"problemMatcher": "$msCompile",
			"options": {
				"cwd": "${workspaceFolder}/Template"
			}
		},
		{
			"label": "$(tools) Publish Project: Template (NativeAOT)",
			"command": "dotnet",
			"type": "shell",
			"args": [
				"publish",
				"-c",
				"${input:publishConfig}",
				"-r",
				"linux-x64",
			],
			"group": "build",
			"presentation": {
				// "reveal": "silent"
			},
			"problemMatcher": "$msCompile",
			"options": {
				"cwd": "${workspaceFolder}/Template"
			}
		}
	]
}
